{
  "name": "@inertiajs/svelte",
  "version": "2.0.0-beta.2",
  "license": "MIT",
  "description": "The Svelte adapter for Inertia.js",
  "contributors": [
    "Jonathan Reinink <jonathan@reinink.ca>",
    "Pedro Borges <oi@pedroborg.es>"
  ],
  "homepage": "https://inertiajs.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/inertiajs/inertia.git",
    "directory": "packages/svelte"
  },
  "bugs": {
    "url": "https://github.com/inertiajs/inertia/issues"
  },
  "scripts": {
    "dev": "npm run package -- --watch",
    "build": "npm run package && publint",
    "package": "svelte-kit sync && svelte-package --input src",
    "prepublishOnly": "npm run build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "svelte": "./dist/server.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^4.0.0 || ^5.0.0 || ^5.0.0-next.244"
  },
  "dependencies": {
    "@inertiajs/core": "2.0.0-beta.2",
    "html-escape": "^2.0.0",
    "lodash": "^4.5.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.2.0",
    "@sveltejs/kit": "^2.5.26",
    "@sveltejs/package": "^2.3.4",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@types/html-escape": "^2.0.2",
    "@types/lodash": "^4.17.7",
    "axios": "^1.7.6",
    "publint": "^0.2.10",
    "svelte": "^4.2.16",
    "svelte-check": "^4.0.0",
    "tslib": "^2.7.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.8"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module"
}
