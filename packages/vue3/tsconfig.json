{
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "src",
    "noEmitOnError": true,

    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "target": "ES2020",

    "declaration": true,

    "module": "ES2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true
    // "strict": true
  }
}
