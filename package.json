{
  "name": "inertia",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r --filter './packages/*' build",
    "watch": "pnpm -r --parallel --filter './packages/*' watch",
    "test": "pnpm test:react && pnpm test:svelte && pnpm test:vue",
    "test:react": "PACKAGE=react playwright test",
    "test:react:watch": "cd packages/react/test-app && npm run watch",
    "test:svelte": "PACKAGE=svelte playwright test",
    "test:svelte:watch": "cd packages/svelte/test-app && npm run watch",
    "test:vue": "PACKAGE=vue3 playwright test",
    "test:vue:watch": "cd packages/vue3/test-app && npm run watch"
  },
  "dependencies": {
    "@playwright/test": "^1.51.0",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-svelte": "^3.2.3",
    "prettier-plugin-tailwindcss": "^0.6.9"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.28.1"
  }
}
